<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_primary_dark_blueGrey"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/appwidget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="3dp"
        android:contentDescription="@string/widget_title"
        android:text="@string/widget_title"
        android:textColor="@color/color_primary_light_blueGrey"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        />

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/widget_no_favorites"
        android:text="@string/widget_no_favorites"
        android:textColor="@color/color_primary_light_blueGrey"
        android:textSize="14sp"
        android:textStyle="bold"
        />

</LinearLayout>